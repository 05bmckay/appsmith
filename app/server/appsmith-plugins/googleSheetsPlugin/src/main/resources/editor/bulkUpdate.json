{
  "identifier": "BULK_UPDATE",
  "controlType" : "SECTION",
  "conditionals": {
    "show": "{{actionConfiguration.formData.command === 'BULK_UPDATE'}}"
  },
  "children": [
    {
      "controlType": "SECTION",
      "label": "Select sheet to query",
      "children": [
        {
          "label": "Spreadsheet URL",
          "configProperty": "actionConfiguration.formData.sheetUrl",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "placeholderText": "https://docs.google.com/spreadsheets/d/xyz/edit#gid=0"
        },
        {
          "label": "Sheet Name",
          "configProperty": "actionConfiguration.formData.sheetName",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "initialValue": "Sheet1"
        },
        {
          "label": "Table Heading Row Index",
          "configProperty": "actionConfiguration.formData.tableHeaderIndex",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "initialValue": "1"
        }
      ]
    },
    {
      "controlType": "SECTION",
      "label": "Query",
      "description" : "Details",
      "children": [
        {
          "label": "Row Objects",
          "propertyName" : "bulkUpdateRowObjectWithSmartSubstitute",
          "configProperty": "actionConfiguration.formData.rowObjects",
          "controlType": "QUERY_DYNAMIC_TEXT",
          "evaluationSubstitutionType": "SMART_SUBSTITUTE",
          "conditionals": {
            "show": "{{actionConfiguration.formData.command === 'BULK_UPDATE' && actionConfiguration.formData.smartSubstitution === true}}"
          },
          "placeholderText": "{{\n  Table1.selectedRows.map((row) => {\n    return { ...row, columnName: Input1.text }\n  })\n}}"
        },
        {
          "label": "Row Objects",
          "propertyName" : "bulkUpdateRowObjectWithoutSmartSubstitute",
          "configProperty": "actionConfiguration.formData.rowObjects",
          "controlType": "QUERY_DYNAMIC_TEXT",
          "evaluationSubstitutionType": "TEMPLATE",
          "conditionals": {
            "show": "{{actionConfiguration.formData.command === 'BULK_UPDATE' && actionConfiguration.formData.smartSubstitution === false}}"
          },
          "placeholderText": "{{\n  Table1.selectedRows.map((row) => {\n    return { ...row, columnName: Input1.text }\n  })\n}}"
        }
      ]
    }
  ]
}