{
  "identifier": "CREATE",
  "controlType": "SECTION",
  "conditionals": {
    "show": "{{actionConfiguration.formData.command === 'CREATE'}}"
  },
  "children": [
    {
      "controlType": "SECTION",
      "label": "Query",
      "description": "Details",
      "children": [
        {
          "label": "Spreadsheet Name",
          "configProperty": "actionConfiguration.formData.spreadsheetName",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "initialValue": ""
        },
        {
          "label": "Row Objects",
          "configProperty": "actionConfiguration.formData.rowObjects",
          "controlType": "QUERY_DYNAMIC_TEXT",
          "evaluationSubstitutionType": "SMART_SUBSTITUTE",
          "conditionals": {
            "show": "{{actionConfiguration.formData.command === 'BULK_APPEND' && actionConfiguration.formData.smartSubstitution === true}}"
          },
          "placeholderText": "{{\n  Table1.selectedRows.map((row) => {\n    return { ...row, columnName: Input1.text }\n  })\n}}"
        },
        {
          "label": "Row Objects",
          "configProperty": "actionConfiguration.formData.rowObjects",
          "controlType": "QUERY_DYNAMIC_TEXT",
          "evaluationSubstitutionType": "TEMPLATE",
          "conditionals": {
            "show": "{{actionConfiguration.formData.command === 'BULK_APPEND' && actionConfiguration.formData.smartSubstitution === false}}"
          },
          "placeholderText": "{{\n  Table1.selectedRows.map((row) => {\n    return { ...row, columnName: Input1.text }\n  })\n}}"
        }
      ]
    }
  ]
}