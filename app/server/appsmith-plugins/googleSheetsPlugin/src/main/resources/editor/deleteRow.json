{
  "identifier": "DELETE_ROW",
  "controlType" : "SECTION",
  "conditionals": {
    "show": "{{actionConfiguration.formData.command === 'DELETE_ROW'}}"
  },
  "children": [
    {
      "controlType": "SECTION",
      "label": "Select sheet to query",
      "children": [
        {
          "label": "Spreadsheet URL",
          "propertyName": "deleteRow_spreadsheetUrl",
          "configProperty": "actionConfiguration.formData.sheetUrl",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "placeholderText": "https://docs.google.com/spreadsheets/d/xyz/edit#gid=0"
        },
        {
          "label": "Sheet Name",
          "propertyName": "deleteRow_sheetName",
          "configProperty": "actionConfiguration.formData.sheetName",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "initialValue": "Sheet1"
        },
        {
          "label": "Table Heading Row Index",
          "propertyName": "deleteRow_tableHeadingRowIndex",
          "configProperty": "actionConfiguration.formData.tableHeaderIndex",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "initialValue": "1"
        }
      ]
    },
    {
      "controlType": "SECTION",
      "label": "Query",
      "description" : "Details",
      "children": [
        {
          "label": "Row Index",
          "propertyName": "deleteRow_rowIndex",
          "configProperty": "actionConfiguration.formData.rowIndex",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "initialValue": "0",
          "placeholderText": "0"
        }
      ]
    }
  ]
}