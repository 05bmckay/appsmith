{
  "editor": [
    {
      "sectionName": "",
      "id": 1,
      "children": [
        {
          "label": "Method",
          "configProperty": "actionConfiguration.formData.method",
          "controlType": "DROP_DOWN",
          "isRequired": true,
          "initialValue": "GET",
          "options": [
            {
              "label": "Fetch sheet rows",
              "value": "GET"
            },
            {
              "label": "Insert sheet row",
              "value": "APPEND"
            },
            {
              "label": "Update sheet row",
              "value": "UPDATE"
            },
            {
              "label": "Delete row",
              "value": "DELETE_ROW"
            },
            {
              "label": "List sheets",
              "value": "LIST"
            },
            {
              "label": "Fetch sheet",
              "value": "INFO"
            },
            {
              "label": "Create new spreadsheet",
              "value": "CREATE"
            },
            {
              "label": "Delete sheet",
              "value": "DELETE"
            },
            {
              "label": "Bulk insert rows",
              "value": "BULK_APPEND"
            },
            {
              "label": "Bulk update rows",
              "value": "BULK_UPDATE"
            }
          ]
        },
        {
          "label": "Spreadsheet Url",
          "configProperty": "actionConfiguration.formData.sheetUrl",
          "controlType": "INPUT_TEXT",
          "conditionals": {
            "hide": "{{['CREATE', 'LIST'].includes(actionConfiguration.formData.method)}}"
          },
          "placeholderText": "https://docs.google.com/spreadsheets/d/xyz/edit#gid=0"
        },
        {
          "label": "Spreadsheet Name",
          "configProperty": "actionConfiguration.formData.spreadsheetName",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "conditionals": {
            "hide": "{{actionConfiguration.formData.method !== 'CREATE'}}"
          },
          "initialValue": ""
        },
        {
          "label": "Select Entity",
          "configProperty": "actionConfiguration.formData.deleteFormat",
          "controlType": "DROP_DOWN",
          "conditionals": {
            "hide": "{{actionConfiguration.formData.method !== 'DELETE'}}"
          },
          "initialValue": "SHEET",
          "options": [
            {
              "label": "Single Sheet",
              "value": "SHEET"
            },
            {
              "label": "Entire Spreadsheet",
              "value": "SPREADSHEET"
            }
          ]
        },
        {
          "label": "Sheet Name",
          "configProperty": "actionConfiguration.formData.sheetName",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "conditionals": {
            "show": "{{['GET', 'UPDATE', 'BULK_UPDATE', 'DELETE_ROW', 'APPEND', 'BULK_APPEND'].includes(actionConfiguration.formData.method) || (actionConfiguration.formData.method === 'DELETE' && actionConfiguration.formData.deleteFormat === 'SHEET')}}"
          },
          "initialValue": ""
        },
        {
          "label": "Table Heading Row Index",
          "configProperty": "actionConfiguration.formData.tableHeaderIndex",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "conditionals": {
            "show": "{{['GET', 'UPDATE', 'BULK_UPDATE', 'DELETE_ROW', 'APPEND', 'BULK_APPEND'].includes(actionConfiguration.formData.method)}}"
          },
          "initialValue": "1"
        },
        {
          "label": "Query Format",
          "configProperty": "actionConfiguration.formData.queryFormat",
          "controlType": "DROP_DOWN",
          "conditionals": {
            "show": "{{actionConfiguration.formData.method === 'GET'}}"
          },
          "initialValue": "ROWS",
          "options": [
            {
              "label": "Query rows",
              "value": "ROWS"
            },
            {
              "label": "Query range",
              "value": "RANGE"
            }
          ]
        },
        {
          "label": "Cell Range",
          "configProperty": "actionConfiguration.formData.range",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "conditionals": {
            "show": "{{actionConfiguration.formData.method === 'GET' && actionConfiguration.formData.queryFormat === 'RANGE'}}"
          },
          "initialValue": "",
          "placeholderText": "A2:B"
        },
        {
          "label": "Row Offset",
          "configProperty": "actionConfiguration.formData.rowOffset",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "conditionals": {
            "show": "{{actionConfiguration.formData.method === 'GET' && actionConfiguration.formData.queryFormat === 'ROWS'}}"
          },
          "initialValue": "",
          "placeholderText": "0"
        },
        {
          "label": "Row Index",
          "configProperty": "actionConfiguration.formData.rowIndex",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "conditionals": {
            "show": "{{actionConfiguration.formData.method === 'DELETE_ROW'}}"
          },
          "initialValue": "",
          "placeholderText": "0"
        },
        {
          "label": "Row limit",
          "configProperty": "actionConfiguration.formData.rowLimit",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "conditionals": {
            "show": "{{actionConfiguration.formData.method === 'GET' && actionConfiguration.formData.queryFormat === 'ROWS'}}"
          },
          "initialValue": "",
          "placeholderText": "10"
        },
        {
          "label": "Row Object",
          "configProperty": "actionConfiguration.formData.rowObject",
          "controlType": "QUERY_DYNAMIC_TEXT",
          "conditionals": {
            "show": "{{['APPEND', 'UPDATE'].includes(actionConfiguration.formData.method)}}"
          },
          "placeholderText": "{{\n  {\n    ...Table1.selectedRow, \n    columnName: Input1.text\n  }\n}}"
        },
        {
          "label": "Row Objects",
          "configProperty": "actionConfiguration.formData.rowObjects",
          "controlType": "QUERY_DYNAMIC_TEXT",
          "conditionals": {
            "show": "{{['CREATE', 'BULK_APPEND', 'BULK_UPDATE'].includes(actionConfiguration.formData.method)}}"
          },
          "placeholderText": "{{\n  Table1.selectedRows.map((row) => {\n    return { ...row, columnName: Input1.text }\n  })\n}}"
        }
      ]
    }
  ]
}
